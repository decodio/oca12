<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <!-- See: https://nl.wikipedia.org/wiki/Rechtsvorm -->
    <!-- Only the official/legal shortcuts are set. -->

    <!-- Eenmanszaak -->
    <record id="company_type_solepropietor" model="res.partner.company.type">
        <field name="name">Sole proprietor</field>
        <field name="shortcut">ez</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Vereniging Onder Firma -->
    <record id="company_type_generalpartnership" model="res.partner.company.type">
        <field name="name">General partnership</field>
        <field name="shortcut">vof</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Maatschap -->
    <record id="company_type_professionalpartnership" model="res.partner.company.type">
        <field name="name">Professional partnership</field>
        <field name="shortcut">mts</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Commanditaire vennootschap -->
    <record id="company_type_limitedpartnership" model="res.partner.company.type">
        <field name="name">Limited partnership</field>
        <field name="shortcut">cv</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Besloten vennootschap -->
    <record id="company_type_privatelimitedcompany" model="res.partner.company.type">
        <field name="name">Private limited company</field>
        <field name="shortcut">bv</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Naamloze vennootschap -->
    <record id="company_type_publiclimitedcompany" model="res.partner.company.type">
        <field name="name">Public limited company</field>
        <field name="shortcut">nv</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Vereniging -->
    <record id="company_type_association" model="res.partner.company.type">
        <field name="name">Association</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Actually there are now three types of cooperative, we keep
         the general one, but also add the three specific types. -->
    <!-- Coöperatie -->
    <record id="company_type_cooperative" model="res.partner.company.type">
        <field name="name">Cooperative</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Coöperatie met beperkte aansprakelijkheid  -->
    <record id="company_type_cooperative_limited" model="res.partner.company.type">
        <field name="name">Limited liability cooperative</field>
        <field name="shortcut">ba</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Coöperatie met uitgesloten aansprakelijkheid  -->
    <record id="company_type_cooperative_excluded" model="res.partner.company.type">
        <field name="name">Excluded liability cooperative</field>
        <field name="shortcut">ua</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Coöperatie met wettelijke aansprakelijkheid  -->
    <record id="company_type_cooperative_legal" model="res.partner.company.type">
        <field name="name">Legal liability cooperative</field>
        <field name="shortcut">wa</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Stichting -->
    <record id="company_type_foundation" model="res.partner.company.type">
        <field name="name">Foundation</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Onderlinge waarborgmaatschappij -->
    <record id="company_type_mutual_assurance" model="res.partner.company.type">
        <field name="name">Mutual assurance company</field>
        <field name="country_id" ref="base.nl"/>
    </record>

    <!-- Kerkgenootschap -->
    <record id="company_type_church" model="res.partner.company.type">
        <field name="name">Church</field>
        <field name="country_id" ref="base.nl"/>
    </record>

</odoo>
