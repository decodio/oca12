<odoo>

    <record model="ir.ui.view" id="crm_case_form_view_oppor_secondary_salesperson">
        <field name="name">crm.lead.form (in crm_secondary_salesperson)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="secondary_user_id" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'sales_team.group_sale_salesman_all_leads'], 'team_id': team_id}" domain="[('share', '=', False)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_case_form_view_leads_secondary_salesperson">
        <field name="name">crm.lead.form (in crm_secondary_salesperson)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="secondary_user_id" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'sales_team.group_sale_salesman_all_leads'], 'team_id': team_id}" domain="[('share', '=', False)]"/>
            </field>
        </field>
    </record>


</odoo>
